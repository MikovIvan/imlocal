<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="?attr/actionBarSize"
            android:fontFamily="sans-serif-medium"
            android:text="Добавить место"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_large_20" />

        <TextView
            android:id="@+id/tv_add_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Название"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:clickable="false"
            app:counterEnabled="true"
            app:counterMaxLength="38"
            app:counterOverflowTextAppearance="@style/MyCounterText"
            app:hintTextAppearance="@style/MyHintText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_feedback_theme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_add_shop_enter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Введите название места"
                android:imeOptions="actionDone"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@color/color_text"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/font_small_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_add_shop_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Подзаголовок"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:clickable="false"
            app:counterEnabled="true"
            app:counterMaxLength="186"
            app:counterOverflowTextAppearance="@style/MyCounterText"
            app:hintTextAppearance="@style/MyHintText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_feedback_theme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_add_shop_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Краткое описание места"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="false"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/font_small_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_add_shop_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Описание"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:clickable="false"
            app:counterOverflowTextAppearance="@style/MyCounterText"
            app:hintTextAppearance="@style/MyHintText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_feedback_theme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_add_shop_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Полное описание места"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="16dp"
                android:singleLine="false"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/font_small_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_add_shop_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Категория"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/list_item_category" />

        <TextView
            android:id="@+id/tv_add_shop_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Изображение"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <TextView
            android:id="@+id/tv_add_shop_image_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Прикрепите от 1 до 11 файлов"
            android:textColor="@color/color_text"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shop_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/list_item_photos"
            tools:showIn="@layout/list_item_photos">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_add_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Адрес"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14"
            app:layout_constraintBottom_toTopOf="@id/tv_add_event_press_free"
            app:layout_constraintStart_toStartOf="@id/tv_add_event_press_free" />

        <TextView
            android:id="@+id/tv_add_shop_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:hint="Введите адрес"
            android:padding="@dimen/spacing_small_8"
            android:textAlignment="textStart"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <TextView
            android:id="@+id/tv_add_shop_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Телефон"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14"
            app:layout_constraintBottom_toTopOf="@id/tv_add_event_press_free"
            app:layout_constraintStart_toStartOf="@id/tv_add_event_press_free" />

        <EditText
            android:id="@+id/et_add_shop_add_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:inputType="phone"
            android:hint="+7(000)000-00-00"
            android:maxLength="16"
            android:padding="@dimen/spacing_small_8"
            android:textAlignment="textStart"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <TextView
            android:id="@+id/tv_add_shop_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Сайт"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <EditText
            android:id="@+id/et_add_shop_add_website"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_white"
            android:inputType="textWebEmailAddress"
            android:hint="www.example.ru"
            android:padding="@dimen/spacing_small_8"
            android:textAlignment="textStart"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <TextView
            android:id="@+id/tv_add_shop_timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Часы работы"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/list_item_category" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small_8">

            <TextView
                android:id="@+id/tv_add_shop_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:fontFamily="sans-serif"
                android:text="Время работы"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14"
                app:layout_constraintStart_toStartOf="@id/et_add_shop_select_work_time"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_add_shop_select_work_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_white"
                android:padding="@dimen/spacing_small_8"
                android:inputType="time"
                android:maxLength="11"
                android:hint="00:00 - 00:00"
                android:textColorHint="@color/color_hint"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14"
                app:layout_constraintEnd_toStartOf="@+id/et_add_shop_select_dinner_time"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_shop_work_time" />

            <TextView
                android:id="@+id/tv_add_shop_dinner_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:fontFamily="sans-serif"
                android:text="Обед — опционально"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14"
                app:layout_constraintStart_toStartOf="@+id/et_add_shop_select_dinner_time"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_add_shop_select_dinner_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_round_white"
                android:padding="@dimen/spacing_small_8"
                android:hint="00:00 - 00:00"
                android:maxLength="11"
                android:inputType="time"
                android:textColorHint="@color/color_hint"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/et_add_shop_select_work_time"
                app:layout_constraintTop_toBottomOf="@id/tv_add_shop_dinner_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_add_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Средний чек"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_add_shop_min_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_round_white"
                android:inputType="number"
                android:hint="min"
                android:padding="@dimen/spacing_small_8"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14" />

            <EditText
                android:id="@+id/et_add_shop_max_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_round_white"
                android:inputType="number"
                android:hint="max"
                android:padding="@dimen/spacing_small_8"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_small_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_shop_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif"
            android:text="Документ Pdf"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />

        <TextView
            android:id="@+id/tv_add_shop_add_document"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_round_white"
            android:hint="Прикрепите файл"
            android:padding="@dimen/spacing_small_8"
            android:textAlignment="textStart"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_small_14" />
    </LinearLayout>
</ScrollView>