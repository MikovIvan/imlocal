<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context=".ui.FragmentProfile">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/suggest_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_address" />

        <ListView
            android:id="@+id/suggest_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/profile"
        android:textColor="@color/color_text"
        android:textSize="@dimen/font_large_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:fontFamily="sans-serif-medium"
        android:text="@string/personal_data"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:fontFamily="sans-serif"
        android:text="@string/family_name"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:background="@drawable/btn_round_white"
        app:hintTextAppearance="@style/MyHintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_profile_family_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/enter_your_family_name"
            android:imeOptions="actionDone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColorHint="@color/color_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:fontFamily="sans-serif"
        android:text="@string/name"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:background="@drawable/btn_round_white"
        app:hintTextAppearance="@style/MyHintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/enter_your_name"
            android:imeOptions="actionDone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColorHint="@color/color_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:fontFamily="sans-serif"
        android:text="@string/middle_name"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:background="@drawable/btn_round_white"
        app:hintTextAppearance="@style/MyHintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_profile_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/enter_your_middle_name"
            android:imeOptions="actionDone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColorHint="@color/color_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:fontFamily="sans-serif"
        android:text="@string/address"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:background="@drawable/btn_round_white"
        app:hintTextAppearance="@style/MyHintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_profile_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/enter_your_address"
            android:imeOptions="actionDone"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:singleLine="false"
            android:textColorHint="@color/color_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/spacing_huge_32"
        android:fontFamily="sans-serif"
        android:text="@string/link_another_account"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal_16"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_login_vk"
            android:layout_width="@dimen/social_icons_40"
            android:layout_height="@dimen/social_icons_40"
            android:layout_margin="@dimen/spacing_normal_16"
            android:src="@drawable/ic_vk" />

        <ImageButton
            android:id="@+id/btn_login_fb"
            android:layout_width="@dimen/social_icons_40"
            android:layout_height="@dimen/social_icons_40"
            android:layout_margin="@dimen/spacing_normal_16"
            android:src="@drawable/ic_fb" />

        <ImageButton
            android:id="@+id/btn_login_google"
            android:layout_width="@dimen/social_icons_40"
            android:layout_height="@dimen/social_icons_40"
            android:layout_margin="@dimen/spacing_normal_16"
            android:src="@drawable/ic_google" />
    </LinearLayout>
</LinearLayout>